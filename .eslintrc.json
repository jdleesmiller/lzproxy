{
  "env": {
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "plugin:mocha/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "mocha/no-hooks-for-single-case": "off",
    "mocha/no-top-level-hooks": "off"
  }
}
